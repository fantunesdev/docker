[Unit]
Description=MyProd
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/docker-compose -f /home/fernando/git/prod/docker_myprod/docker-compose.yml up -d
ExecStop=/usr/bin/docker-compose -f /home/fernando/git/prod/docker_myprod/docker-compose.yml down

[Install]
WantedBy=multi-user.target